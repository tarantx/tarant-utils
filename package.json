{
  "name": "tarant-utils",
  "version": "0.3.66",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "contributors": [
    "Kevin Mas Ruiz <masruizkevin@gmail.com>",
    "Kanekotic <alvarojosepl@gmail.com>"
  ],
  "repository": "git@github.com:tarantx/tarant-utils.git",
  "license": "MIT",
  "keywords": [
    "actor system",
    "actor",
    "DDD",
    "actor-system",
    "tarant"
  ],
  "scripts": {
    "prepare": "yarn build && yarn build:cdn",
    "build": "tsc",
    "build:cdn": "yarn build && rollup -c",
    "format": "prettier --write \"**/*.ts\" && tslint -p tsconfig.json --fix lib/**/*.ts -t verbose",
    "lint": "tslint -p tsconfig.json",
    "test": "yarn format && yarn lint && jest test",
    "test:dev": "jest --watchAll test",
    "test:cov": "yarn format && yarn lint && jest --coverage",
    "push": "yarn test && git push",
    "deploy:major": "yarn version --major",
    "deploy:minor": "yarn version --minor",
    "deploy:patch": "yarn version --patch",
    "deploy:push": "git push && git push --tags",
    "preversion": "yarn test"
  },
  "devDependencies": {
    "@types/faker": "6.6.9",
    "@types/jest": "28.1.8",
    "@types/node": "18.7.13",
    "coveralls": "3.1.1",
    "faker": "6.6.6",
    "jest": "29.0.1",
    "prettier": "2.7.1",
    "rollup": "2.78.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.33.0",
    "ts-jest": "28.0.8",
    "tslib": "2.4.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.8.2"
  },
  "dependencies": {
    "tarant": "3.1.8"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
